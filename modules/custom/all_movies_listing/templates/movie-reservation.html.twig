<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<h1>
    {{ pageTitle }}
</h1>

{% set useless_a = set_all_movie_categories(movie_categories) %}
{% set useless_b = set_all_halls(halls) %}
{% set useless_c = get_available_movie_data(movies[14]) %}

<div>
  <form action="" method="post">
    <label>
      Please select movie genre for which you would like to make a reservation
    </label>
    <br>
    {% for category in movie_categories %}
      <input type="checkbox" name="categories[]" value="{{ category.tid }}" /> {{ category.name }}
      <br>
    {% endfor %}
    <input type="submit" value="Filter movies by categories">
  </form>
  <br>
</div>

<div>
  <p>You must insert your name and click "Check your name" to be able to reserve a movie!</p>
  <label>Type your name:</label>
  <input type="text" name="customer_name" id="customer_name" />
  <input type="submit" value="Check your name" onclick="validate_customer_form()">
</div>

<div>
  {% if successful_reservation == 'already_reserved' %}
    <p style="background-color: lightcoral;">You already have a reservation for that movie and day!</p>
  {% endif %}
  {% if successful_reservation == 'recorded' %}
    <p style="color: green;">Your reservation has been successfully recorded.</p>
  {% endif %}
  {% if successful_reservation == 'no_avail_tickets' %}
    <p style="color: lightcoral;">Therea are no more available tikets for this movie on this day. - insert that movie name and date here!</p>
  {% endif %}
</div>

<div>
  {% set no_movie_available = true %}
  {% for movie in movies %}

    {#Checks if movie has at least one airing#}
    {% if movie.field_movie_air_info.0.entity.field_num_remain_tickets is not empty %}

      {% set movie_data = get_available_movie_data(movie) %}
      {% if movie_data is not null %}
        {% set no_movie_available = false %}
        <div class="movie" id="{{ movie.nid.value }}">
          <p class="movie_title">{{ movie.title.value }}</p>
          <img src="{{ file_url(movie.field_image_field.0.entity.uri.value) }}" class="movie_img" alt="No img"/>
          {% autoescape false %}
            <div>{{ movie.field_description.value }}</div>
          {% endautoescape %}
          <div class="reserve_movie_button" id="btn_{{ movie.nid.value }}">
            <button type="button" >Reserve this movie</button>
          </div>

          <div id="popup_{{ movie.nid.value }}" class="popup" hidden>
            <form action="">
              <div>
                <p>Movie is available for: </p>
                {% for movie_air in movie_data %}
                  <p id="{{ movie.nid.value }}_{{ movie_air.day }}" class="availability_by_day">
                    Day: {{ movie_air.day }}, Time: {{ movie_air.time}}, Remaining tickets: {{ movie_air.remaining_tickets }}, Hall: {{ movie_air.hall }}
                  </p>
                  <form action="" method="get">
                    <input type="hidden" name="movie_reservation[customer_name_validated]" class="customer_name" id="customer_name/{{ movie.nid.value }}/{{ movie_air.day }}" >
                    <input type="hidden" name="movie_reservation[movie_id_for_reservation]" value="{{ movie.nid.value }}">
                    <input type="hidden" name="movie_reservation[day_for_reservation]" value="{{ movie_air.day }}">
                    <input type="hidden" name="movie_reservation[air_info_id]" value="{{ movie_air.air_info_id }}">
                    <input type="submit" class="btn_final_reserve_movie" id="btn_{{ movie.nid.value }}_{{ movie_air.day }}" value="Confirm your movie reservation"/>
                  </form>
                {% endfor %}
              </div>
            </form>
          </div>
        </div>
      {% endif %}
    {% endif %}
  {% endfor %}

  {% if no_movie_available == true %}
    <p style="background-color: lightcoral;">Sorry, there are no movies currently available. :(</p>
  {% endif %}
</div>
