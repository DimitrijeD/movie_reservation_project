<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<h1>
    {{ pageTitle }}
</h1>

<div>
  <form action="" method="post">
    <label>
      Please select movie genre for which you would like to make a reservation
    </label>
    <br>
    {% for category in movie_categories %}
      <input type="checkbox" name="categories[]" value="{{ category.tid }}" /> {{ category.name }}
      <br>
    {% endfor %}
    <input type="submit" value="Filter movies by categories">
  </form>
  <br>
</div>

<div>
  <p>You must insert your name and click "Check your name" to be able to reserve a movie!</p>
  <label>Type your name:</label>
  <input type="text" name="customer_name" id="customer_name" />
  <input type="submit" value="Check your name" onclick="validate_customer_form()">
</div>

<div>
  <p class="successful_reservation">{{ successful_reservation }}</p>
</div>

<div>
  {% set no_movie_available = true %}

  {% for movie in movies %}
    {% set movie_availability = get_movie_availability(movie) %}
    {% if movie_availability != false %}
      {% set no_movie_available = false %}
      <div class="movie" id="{{ movie.nid.value }}">
        <p class="movie_title">
          {{ movie.title.value }}
        </p>

        <img src="{{ file_url(movie.field_image_field.0.entity.uri.value) }}" class="movie_img" alt="No img"/>

        {% autoescape false %}
          <div>{{ movie.field_description.value }}</div>
        {% endautoescape %}

        <div class="reserve_movie_button" id="btn_{{ movie.nid.value }}">
          <button type="button" >Reserve this movie</button>
        </div>

        <div id="popup_{{ movie.nid.value }}" class="popup" hidden>
          <form action="">
            <div>
              <p>
                Movie is available for:
              </p>
              {% for key in movie_availability|keys %}
                <p id="{{ movie.nid.value }}_{{ key }}" class="availability_by_day">
                  {{ key }}
                </p>
                <form action="" method="get">
                  <input type="hidden" name="movie_reservation[customer_name_validated]" class="customer_name" id="customer_name/{{ movie.nid.value }}/{{ key }}" >
                  <input type="hidden" name="movie_reservation[movie_id_for_reservation]" value="{{ movie.nid.value }}">
                  <input type="hidden" name="movie_reservation[day_for_reservation]" value="{{ key }}">
                  <input type="submit" class="btn_final_reserve_movie" id="btn_{{ movie.nid.value }}_{{ key }}" value="Confirm your movie reservation"/>
                </form>
              {% endfor %}
            </div>
          </form>
        </div>

      </div>
      <br>

    {% endif %}
  {% endfor %}

  {% if no_movie_available == true %}
    <p>Sorry, there are no movies currently available. :(</p>
  {% endif %}
</div>



